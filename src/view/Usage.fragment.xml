    <endButton>
  		<Button icon="sap-icon://email" text="get more"/>
    </endButton>
    <content>
		<ProgressIndicator
        width="100%"
        percentValue="{statistic>/max}"
        displayValue="{path:'statistic>/max'}"
        showValue="true"
        state="Success" />
    </content>
  </ResponsivePopover>
</core:FragmentDefinition>