<mvc:View
	controllerName="de.esconderse.view.Master"
	displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns="sap.m">
	<Page
		title="{i18n>pageMaster.title}">
		<headerContent>
					<ScrollContainer visible="{account>/unauth}">
						<html:a 
							href="#" 
							onclick="navigator.id.request();" 
							class="persona-button dark">
							<Text 
								text="{i18n>pageMaster.footer.btnLogin}"
								textAlign="Center"/>
						</html:a>
					</ScrollContainer>
					<Button 
						icon="sap-icon://log"
						tooltip="{i18n>pageMaster.header.btnLogout.tooltip}"
						press="onLogout"
						visible="{account>/auth}"/>
		</headerContent>
		<subHeader>
			<Bar>
				<contentMiddle>
					<SearchField
						width="100%"
						tooltip="{i18n>pageMaster.search.tooltip}"
            			showRefreshButton="{device>/isNoTouch}"
            			search="onSearch"
            			liveChange="onSearch" >
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
 		   	<PullToRefresh
        		id="pullToRefresh"
				refresh="onRefresh"
	    	    visible="{device>/isTouch}"/>
			<List
				id="mailList"
				items="{/list}"
				mode="{device>/listMode}"
				noDataText="{i18n>pageMaster.list.textNoData}"
				selectionChange="onForward">
				<items>
					<ObjectListItem
						press="onForward"
						type="{device>/listItemType}"
						title="{description}"
						icon="{
							path: 'status', 
							formatter: 'de.esconderse.util.Formatter.statusIcon'
						}">
						<customData>
							<core:CustomData 
								key="class" 
								value="{
									path: 'status', 
									formatter: 'de.esconderse.util.Formatter.statusSetClass'
								}"/>
						</customData>
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<Bar>
				<contentLeft>
					<Button 
						tooltip="{i18n>pageMaster.footer.btnHome.tooltip}"
						icon="sap-icon://home" 
						press="onHome"/>
				</contentLeft>
				<contentMiddle>
				</contentMiddle>
				<contentRight>
					<Button 
						tooltip="{i18n>pageMaster.footer.btnUsage.tooltip}"
						icon="sap-icon://bar-chart" 
						press="onMenuUsage"
						visible="{account>/auth}"/>
					<Button 
						tooltip="{i18n>pageMaster.footer.btnFilter.tooltip}"
						icon="sap-icon://filter" 
						press="onMenuFilter"
						visible="{account>/auth}"/>
					<Button
						id="btnCreate"
						tooltip="{i18n>pageMaster.footer.btnNew.tooltip}"
						icon="sap-icon://add"
						press="onCreateDialog"
						visible="{account>/auth}"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>
