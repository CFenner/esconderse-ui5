<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<form:SimpleForm
		minWidth="1024"
        maxContainerCols="2"
        editable="false">
        <form:content>
        	<core:Title text="{i18n>pageAccount.tabLogin.paragraph.title}"/>
			<html:a 
				href="#account" 
				onclick="navigator.id.request();" 
				class="persona-button dark">
				<Text textAlign="Center"
					text="{i18n>pageMaster.footer.btnLogin}"/>
			</html:a>
       	</form:content>
	</form:SimpleForm> 
</core:FragmentDefinition>
