<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
	<Dialog
		title="{i18n>dialogRename.title}"
		type="Message" >
		<Label 
			text="{i18n>dialogRename.labelDescription}" 
			labelFor="inputRename" />
		<Input
			id="inputRename"
			name="description"
			placeholder="{description}" />
	    <Text id="textId" text="{id}" visible="false" />
	    <Text text="{i18n>dialogRename.description}" />
	    <beginButton>
			<Button 
				text="{i18n>dialogRename.btnCancel}" 
				type="Reject" 
				press="onRenameDialogClose" />
		</beginButton>
		<endButton>
			<Button 
				text="{i18n>dialogRename.btnRename}" 
				type="Emphasized" 
				press="doRename" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>