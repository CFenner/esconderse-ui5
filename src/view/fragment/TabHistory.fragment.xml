<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"><!--
	<form:SimpleForm
		minWidth="1024"
        maxContainerCols="2"
        editable="false">
        <form:content>
        	<core:Title text="Zugewiesene Weiterleitungen"/>-->
			<Table id="forwardHistory" inset="false" items="{history}">
								<!--
								{
									path: 'history',
									sorter: {
										path: 'createDate',
								        descending: true
									}
								}
								-->
				<columns>
					<Column><Text text="{i18n>pageForward.tabHistory.table.headerMsg}" /></Column>
					<Column
						minScreenWidth="Tablet"
						demandPopin="true">
						<Text text="{i18n>pageForward.tabHistory.table.headerDate}" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{msg}, {value}"/>
							<Text
								text="{
									path: 'createDate',
									formatter: 'de.esconderse.util.Formatter.datePretty'
								}"
								tooltip="{createDate}"/>
            			</cells>
        			</ColumnListItem>
				</items>
    		</Table>
       	</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>
