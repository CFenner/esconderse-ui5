<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  	<ActionSheet
		title="{i18n>pageMaster.footer.filter.title}"
		placement="Top">
		<buttons>
	  		<Button 
	  			icon="sap-icon://undo" 
	  			text="{i18n>pageMaster.footer.filterNone}" 
	  			press="onFilterReset"/>	
	  		<Button 
	  			icon="sap-icon://connected" 
	  			text="{i18n>pageMaster.footer.filterActive}" 
	  			press="onFilterActive"/>
	  		<Button 
	  			icon="sap-icon://disconnected" 
	  			text="{i18n>pageMaster.footer.filterInactive}" 
	  			press="onFilterInactive">
	  			<customData>
	  				<core:CustomData key="status" value="inactive"/>
	  			</customData>
	  		</Button>
    	</buttons>
	</ActionSheet>
</core:FragmentDefinition>